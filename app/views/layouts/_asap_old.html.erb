<%
  new_submission = current_user.has_access('submissions', 'new', admin: true)
  index_submission = current_user.has_access('submissions', 'index', admin: true)
%>
<%if index_submission || new_submission%>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown">
      Submissions<b class="caret"></b>
    </a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <%if index_submission%>
        <li><%=link_to "All", submissions_path%></li>
      <%end%>
      <li>
        <a href=<%=incomplete_submissions_path%>>
          In Progress
          <span class="badge badge-warning pull-right">
            <%=Submission.where(:user_id => current_user.id, :completed => false).length%>
          </span>
        </a>
      </li>
      <%if new_submission%>
        <li><a href=<%=new_submission_path%>>New</a></li>
      <%end%>

      <%if CONFIG.sr::GENERAL[:enable_orm]%>
        <div class="dropdown-divider"></div>
        <li><a href=<%=orm_submissions_path%>>All ORMs</a></li>
        <li><a href=<%=new_orm_submission_path%>>New ORM</a></li>
      <%end%>

    </ul>
  </li>
<%end%>


<% record_index = current_user.has_access('records', 'index', admin: true) %>
<%if record_index%>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown">
      Reports<b class="caret"></b>
    </a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <%if record_index%>
        <li><a href=<%=records_path%>>All</a></li>
      <%end%>
    </ul>
  </li>
<%end%>


<%
  report_index = current_user.has_access('reports', 'index', admin: true)
  report_summary = current_user.has_access('events', 'summary', admin: true) &&
    CONFIG.sr::GENERAL[:event_summary]
  report_tabulation = current_user.has_access('events', 'tabulation', admin: true) &&
    CONFIG.sr::GENERAL[:event_tabulation]
%>
<% if report_index || report_summary || report_tabulation %>
  <li class="dropdown">
  <a href="#" data-toggle="dropdown">Events<b class="caret"></b></a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <% if report_index %>
        <li><a href=<%=reports_path%>>All</a></li>
      <%end%>
      <% if report_summary %>
        <li><a href=<%=summary_reports_path%>>Summary</a></li>
      <%end%>
      <% if report_tabulation %>
        <li><a href=<%=tabulation_reports_path%>>Tabulation</a></li>
      <%end%>
    </ul>
  </li>
<%end%>


<%
  meeting_index = current_user.has_access('meetings', 'index', admin: true)
  meeting_new = current_user.has_access('meetings', 'new', admin: true)
%>
<%if meeting_index || meeting_new%>
  <li class="dropdown">
  <a href="#" data-toggle="dropdown">Meetings<b class="caret"></b></a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <%if meeting_index%><li><a href=<%=meetings_path%>>All</a></li><%end%>
      <%if meeting_new%><li><a href=<%=new_meeting_path%>>New</a></li><%end%>
    </ul>
  </li>
<%end%>


<% if current_user.has_access('corrective_actions', 'index', admin: true) %>
  <li>
    <a href=<%=corrective_actions_path%>>
      Corrective Actions
    </a>
  </li>
<%end%>


<% if current_user.has_access('faa_reports', 'index', admin: true) %>
    <li class="dropdown">
    <a href="#" data-toggle="dropdown">FAA Reports<b class="caret"></b></a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
        <li><a href=<%=faa_reports_path%>>All</a></li>
        <li><a href=<%=new_faa_report_path%>>New</a></li>
    </ul>
    </li>
<%end%>

<% if current_user.has_access('home','query_all', admin: true) %>
  <li class="dropdown">
    <%=link_to "Query Center<b class='caret'></b>".html_safe, "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"%>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <li><%=link_to "All", queries_path%></li>
      <li><%=link_to "New", new_query_path%></li>
    </ul>
  </li>
<%end%>





<style>
.dropdown-divider{
    height: 1px;
    margin: 9px 0;
    overflow: hidden;
    background-color: #e5e5e5;
}
</style>


<%
	new_submission = current_user.has_access("submissions","new")
	index_submission = current_user.has_access("submissions","index")
%>
<%if index_submission || new_submission%>
	<li class="dropdown">
		<a href="#" data-toggle="dropdown">
			Submissions<b class="caret"></b>
		</a>
		<ul class="dropdown-menu dropdown-notification" role="menu">
			<%if index_submission%>
				<li><%=link_to "All", submissions_path%></li>
			<%end%>
			<li>
				<a href=<%=incomplete_submissions_path%>>
					In Progress
					<span class="badge badge-warning pull-right">
						<%=Submission.where(:user_id => current_user.id, :completed => false).length%>
					</span>
				</a>
			</li>
			<%if new_submission%>
				<li><a href=<%=new_submission_path%>>New</a></li>
			<%end%>

			<%if BaseConfig.airline[:enable_orm]%>
				<div class="dropdown-divider"></div>
				<li><a href=<%=orm_submissions_path%>>All ORMs</a></li>
				<li><a href=<%=new_orm_submission_path%>>New ORM</a></li>
			<%end%>

		</ul>
	</li>
<%end%>



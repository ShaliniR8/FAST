    <a class="navbar-brand" href="/gateway"><img src="/ProSafeT_logo_final.png" style="width:150px;height:35px"alt="Company Logo"/></a>
    <a href="#" class="responsive-menu-toggle">
        <i class="fa fa-reorder"></i>
        <span class="sr-only">Open Menu</span>
    </a>
    <div id="navbar-no-collapse" class="navbar-no-collapse">
      <ul class="nav navbar-nav">
        <%if session[:mode]=="ASAP"%>
          <%=render :partial => '/layouts/asap'%>
        <%elsif session[:mode]=="SMS IM"%>
          <%=render :partial => '/layouts/smsim'%>
        <%elsif session[:mode]=='SMS'%>
          <%=render :partial => '/layouts/sms'%>
        <%elsif session[:mode]=='SRM'%>
          <%=render :partial => '/layouts/srm'%>
        <%end%>
      </ul>
      <ul class="nav navbar-right navbar-nav">
        <li class="dropdown">
          <a href="#" data-toggle="dropdown">Messages&nbsp&nbsp&nbsp&nbsp<span style="color:white;background-color:red;width:20px"><b>&nbsp&nbsp<%=current_user.num_unread%>&nbsp&nbsp</b></span><b class="caret"></b></a>
          <ul class="dropdown-menu right dropdown-notification" role="menu">
            <li><a href=<%=new_message_path%>>New</a></li>
            <li><a href=<%=messages_path%>>Inbox</a></li>
            <li><a href=<%=sent_messages_path%>>Sent</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name %><b class="caret"></b></a>
          <ul class="dropdown-menu messages">
            <li><a href =<%=self_edit_user_path(current_user)%>>Profile</a></li>
            <li><a href =<%=change_password_user_path(current_user)%>>Change Password</a></li>
            <% if current_user.level == "Admin" %>
              <li><a href="#" class="dropdown-menu-header">Admin</a></li>
              <li><a href =<%=users_path%>>Accounts</a></li>
              <li><a href =<%=new_user_path%>>New Account</a></li>
              <li><a href="#" class="dropdown-menu-header">Access Control</a></li>
              <li><a href =<%=privileges_path%>>Privileges</a></li>
              <li><a href =<%=access_controls_path%>>Rules</a></li>
              <li><a href="#" class="dropdown-menu-header">Templates</a></li>
              <li><a href =<%=templates_path%>>All</a></li>
              <li><a href =<%=new_template_path%>>New</a></li>
            <%end%>
            <li><a href="#" class="dropdown-menu-header">Module</a></li>
            <%if current_user.has_access('Safety Assurance','module')%>

            <li><a href =<%=switch_errors_path(:mode=>"SMS")%>>Safety Assurance</a></li>
            <%end%>
            <%if current_user.has_access('Safety Risk Management','module')%>
            <li><a href =<%=switch_errors_path(:mode=>"SRM")%>>Safety Risk Management</a></li>
            <%end%>
            <%if current_user.has_access('SMS IM','module')%>
            <li><a href =<%=switch_errors_path(:mode=>"SMS IM")%>>SMS IM</a></li>
            <%end%>
            <%if current_user.has_access('ASAP','module')%>
            <li><a href =<%=switch_errors_path(:mode=>"ASAP")%>>Safety Reporting</a></li>
            <%end%>
            <li><a href="#" class="dropdown-menu-header">Reference</a></li>
            <%if current_user.has_access("documents","index")%><li><a href=<%=documents_path%>>Documents</a></li><%end%>
            <li><a href ="http://support.prodigiq.com" target="_blank">Support</a></li>
          </ul>
        </li>
        <li><a href ="<%=logout_path%>">Logout</a></li>

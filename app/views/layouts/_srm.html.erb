<% sra_new = current_user.has_access('sras', 'new', admin: CONFIG::GENERAL[:global_admin_default]) %>
<% sra_index = current_user.has_access('sras', 'index', admin: CONFIG::GENERAL[:global_admin_default]) %>
<% if sra_new || sra_index %>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown">SRA (SRM)<b class="caret"></b></a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <% if sra_index %>
        <li><a href=<%=sras_path%>>All</a></li>
      <%end%>
      <% if sra_new %>
        <li><a href=<%=new_sra_path%>>New</a></li>
      <%end%>
    </ul>
  </li>
<%end%>



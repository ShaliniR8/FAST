<%audit_new = current_user.has_access('audits', 'new', admin: true) %>
<%audit_index = current_user.has_access('audits','index', admin: true) %>
<%audit_admin = current_user.has_access('audits', 'admin', admin: true, strict: true) %>
<%if audit_admin || audit_new || audit_index%>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown">Audits<b class="caret"></b></a>
    <ul class="dropdown-menu dropdown-notification" role="menu">
      <% if audit_index %>
        <li><a href=<%=audits_path%>>All</a></li>
      <%end%>
      <% if audit_new %>
        <li><a href=<%=new_audit_path%>>New</a></li>
      <%end%>
      <% if BaseConfig.airline[:enable_recurrence] && audit_admin %>
        <li><a href=<%="#{recurrences_path}?form_type=Audit"%>>Recurring Audits</a></li>
        <li><a href=<%="#{new_recurrence_path}?form_type=Audit"%>>New Recurring Audit</a></li>
      <%end%>
    </ul>
  </li>
<%end%>



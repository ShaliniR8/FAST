<script type="text/javascript" src="/javascripts/utility/format-builder.js"></script>

<%=form_for @audit do |x|%>
  <%=x.fields_for :requirements, @requirement do |f|%>
    <div class="panel-warning">
      <div class="panel-heading">
        <div class="panel-title">
          New Checklist Item
          <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
            <span class="glyphicon glyphicon-remove">
            </span>
          </button>
        </div>
      </div>
      <div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
        <%=render '/forms/form_fields', :f => f, :fields => @fields, :record => @requirement %>
        <%=x.submit "Save",:class=>"btn btn-success pull-right mt5 mr15", disable_with: "Saving..."%>
      </div>
    </div>
  <%end%>
<%end%>

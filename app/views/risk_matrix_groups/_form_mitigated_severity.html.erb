<div class="col-xs-6">
  <hr/>
  <h4 style="color:#48C9B0">
    <b>SEVERITY EXCERCISE</b>
  </h4>

  <table class="table table-bordered table-centered table-cursor">
    <tr>
      <th bgcolor="#48C9B0" style="color:white">SEVERITY</th>
      <th bgcolor="#48C9B0" colspan="<%=@risk_group.severity_table.column_num.length%>" style="color:white">CLASS</th>
    </tr>
    <%@risk_group.severity_table.row_num.each do |i|%>
      <tr>
        <%@risk_group.severity_table.get_row(i).sort_by{|x| x.table_column}.each do |cell|%>
          <%if (cell.table_row == 0 || cell.table_column == 0)%>
            <th bgcolor="#EAFAF1"><%=cell.value%></th>
          <%else%>
            <td class="mitigated_severity_td" data-id="<%=cell.id%>" data-row="<%=cell.table_row%>" data-status="" data-column="<%=cell.table_column%>">
              <%=cell.value%>
            </td>
          <%end%>
        <%end%>
      </tr>
    <%end%>
  </table>
</div>


<div class="col-xs-12">
  <%=form_for @record do |f| %>
    <table class="table table-bordered table-centered" >
      <tr>
        <th bgcolor="#BDB76B" style="color:white">SEVERITY</th>
        <th bgcolor="#BDB76B" style="color:white" colspan="<%=@record.group.probability_table.column_header.length-1%>">PROBABILITY</th>
      </tr>
      <tr>
        <%@record.group.probability_table.column_header.each do |x|%>
          <th bgcolor="#FFFFF0"><%=x.value%></th>
        <%end%>
      </tr>
      <%@record.group.severity_table.row_header.each_with_index do |row_header, row_index|%>
        <tr>
          <th bgcolor="#FFFFF0"><%=row_header.value%></th>
          <%@record.get_row(row_index+1).each do |x|%>
            <%=f.fields_for :risk_matrix_cells, x do |ff|%>
              <td bgcolor="<%=x.color%>">
                <%=ff.select :color, ["red", "crimson", "orangered", "darkorange", "gold", "green", "mediumseagreen", "lightskyblue", "deepskyblue", "plum", "blueviolet"], {}, {:class => "form-control color_cell"}%>
              </td>
            <%end%>
          <%end%>
        </tr>
      <%end%>
    </table>
    <%=f.submit "Save", :class => "btn btn-success pull-right mt20", :disable_with => "Saving..."%>
  <%end%>
</div>



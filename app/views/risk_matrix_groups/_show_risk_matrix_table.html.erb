<div class="col-xs-6">
	<hr/>
	<h4 style="color:#BDB76B">
		<b>RISK MATRIX</b>
		<%=link_to "Edit", "#", :class => "btn btn-warning pull-right", :id => "edit_risk_table_btn"%>
	</h4>
	<table class="table table-bordered table-centered" cellspacing="0" width="100%">
		<tr>
			<th bgcolor="#BDB76B" style="color:white">SEVERITY</th>
			<th bgcolor="#BDB76B" style="color:white" colspan="<%=@record.probability_table.column_header.length-1%>">PROBABILITY</th>
		</tr>
		<tr>
			<%@record.probability_table.column_header.each do |x|%>
				<th bgcolor="#FFFFF0"><%=x.value%></th>
			<%end%>
		</tr>
		<%@record.severity_table.row_header.each_with_index do |row_header, row_index|%>
			<tr>
				<th bgcolor="#FFFFF0"><%=row_header.value%></th>
				<%@record.risk_table.get_row(row_index+1).each do |cell|%>
					<td bgcolor="<%=cell.color%>"><%=cell.value%> (<%=cell.table_row%>, <%=cell.table_column%>)</td>
				<%end%>
			</tr>
		<%end%>
	</table>
</div>



<script>
	$(function(){
		$("#edit_risk_table_btn").on("click", function(){
			$.get("<%=edit_risk_matrix_table_path(@record.risk_table)%>");
		});
	});
</script>
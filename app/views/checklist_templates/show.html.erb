<script type="text/javascript" src="/javascripts/utility/nested_fields.js"></script>
<script type="text/javascript" src="/javascripts/utility/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="/javascripts/utility/dataTables.bootstrap.min.js"></script>
<script type="text/javascript" src="/javascripts/utility/dataTables.buttons.min.js"></script>

<div class="item active mt50" style="height:auto;">
  <div class="grid per90 center-block">
    <%= render "shared/alerts" %>

    <div class="panel panel-steelblue">
      <div class="panel-heading">
        <div class="panel-title">
          <div class="top_text">
            Checklist Template
          </div>
          <div class="top_buttons pull-right">
            <%=link_to "All Templates",
              checklist_templates_path,
              :class => "btn btn-default pull-right",
              :disable_with => "Redirecting..."%>
            <%=link_to "Edit",
              edit_checklist_template_path(@checklist_template),
              :class => "btn btn-warning pull-right mr5",
              :disable_with => "Editing..."%>
            <%=link_to "Delete",
              checklist_template_path(@checklist_template),
              :method => "delete",
              :confirm => "Are you sure?",
              :disable_with => "Deleting...",
              :class => "btn btn-danger pull-right mr5"%>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <%=render '/forms/show_fields',
          :fields => @fields,
          :record => @checklist_template%>
      </div>
    </div>

    <div class="panel panel-lightskyblue">
      <div class="panel-heading">
        <div class="panel-title">Questions</div>
      </div>
      <div class="panel-body">
        <table class="table table-bordered">
          <thead>
            <th style="width: 2%;">#</th>
            <th style="width: 70%;">Question</th>
            <th style="width: 14%;">FAA Reference</th>
            <th style="width: 14%;">Manual Reference</th>
          </thead>
          <tbody class="sortable" id="checklist_questions">
            <%@checklist_template.checklist_questions.where(archive: 0).each_with_index do |question, index|%>
              <tr style="<%=question.header? ? 'background-color:whitesmoke;font-weight:bold' : ''%>">
                <td><%=question.number%></td>
                <td><%=question.question%></td>
                <td><%=question.faa_reference%></td>
                <td><%=question.airline_reference%></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>








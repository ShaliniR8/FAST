<script type="text/javascript" src="/javascripts/utility/extra_fields.js"></script>

<%=form_for @field do |f|%>
  <%=hidden_field_tag :template_id, params[:template_id]%>
  <div class="panel panel-warning">
    <div class="panel-heading">
      <div class="panel-title"><b><%=controller.action_name.titleize%></b></div>
      <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphiconglyphicon-remove"></span></button></div>
    </div>
    <div class="panel-body">
      <div class="row" style="max-height:500px;overflow-y:auto;"%>
        <div class="form-group col-xs-7">
          <%=f.label :name, "Description"%>
          <%=f.text_field :name, :class => "form-control"%>
        </div>
        <div class="form-group col-xs-8">
          <%=f.label :low, "Low"%>
          <%=f.text_field :low, :class => "form-control"%>
        </div>
        <div class="form-group col-xs-2">
          <%=f.label :low_pt, "Point"%>
          <%=f.text_field :low_pt, :class => "form-control"%>
        </div>
        <div class="form-group col-xs-8">
          <%=f.label :moderate, "Moderate"%>
          <%=f.text_field :moderate, :class => "form-control"%>
        </div>
        <div class="form-group col-xs-2">
          <%=f.label :moderate_pt, "Point"%>
          <%=f.text_field :moderate_pt, :class => "form-control"%>
        </div>
        <div class="form-group col-xs-8">
          <%=f.label :high, "High"%>
          <%=f.text_field :high, :class => "form-control"%>
        </div>
        <div class="form-group col-xs-2">
          <%=f.label :high_pt, "Point"%>
          <%=f.text_field :high_pt, :class => "form-control"%>
        </div>
      </div>
      <%=f.submit "Save", :class => "btn btn-success pull-right mt5 mr15", :disable_with => "Saving..."%>
    </div>
<%end%>

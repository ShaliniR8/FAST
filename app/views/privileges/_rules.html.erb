<div class="panel-primary">
  <div class="panel-heading">
    <div class="panel-title"><b>Applied Rules for <%=@privilege.name%></b>
    <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button></div>
  </div>
  <div class="panel-body">
    <div class="row">
      <table class="table table-striped table-bordered" id="rt">
        <thead>
          <tr>
            <%@headers.each do |h|%>
              <th><%=h[:title]%></th>
            <%end%>
          </tr>
        </thead>
        <tbody>
          <%@privilege.access_controls.each do |u|%>
            <tr uid="<%=u.id%>">
              <%@headers.each do |h|%>
                <td><%=u.send(h[:field])%></td>
              <%end%>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>


<script>
$(document).ready(function(){
  $('#rt').DataTable({
    "aLengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]],
    "iDisplayLength": 10
  });
});
</script>

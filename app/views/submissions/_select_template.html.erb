<div class="item active mt50" style="height:auto;">
  <div class="grid per90 center-block">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          <b>New Submission</b>
        </div>
      </div>
      <div class="panel-body" id="form_body">
        <%= form_tag destination,{:method=>"get",:class=>"form-inline"} do%>
          <center>
            <div class="form-group form-inline">
              <%=label_tag :type,  "Select Submission Type"%>
              <%=select_tag :template, options_from_collection_for_select(@templates,'id','name'), {:class=>"ml5 form-control"}%>
            </div>
              <%= submit_tag "Create", class:"ml5 btn btn-xl btn-success", disable_with: "Creating..."%>
          </center>
        <%end%>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-12 col-md-12 col-lg-12"%>
  <div class="panel panel-lightskyblue">
    <div class="panel-heading click-heading">
      <div class="panel-title">
        <b>Number of Days</b>
        <span class="pull-right clickable">
          <i class="mt5 glyphicon glyphicon-chevron-up"></i>
        </span>
      </div>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-6">
          <b>Total number of days away from work: </b>
        </div>

        <div class="col-xs-6">
          <b>Total number of days of job transfer or restriction: </b>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6 text-center h4">
          <div class='underline'><%= @total_of_k %></div>
        </div>

        <div class="col-xs-6 text-center h4">
          <div class='underline'><%= @total_of_l %></div>
        </div>
      </div>
    </div>
  </div>
</div>

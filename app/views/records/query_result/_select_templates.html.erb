<div class="panel panel-primary">
	<div class="panel-heading">
		<div class="panel-title">
			Step 1. Select Report Types
		</div>
	</div>
	<div class="panel-body">
		<%=link_to "Select All", "#", :id => "select_all"%>
		<div class="table-responsive">
			<table id="templates" class="table table-bordered table-hover table-striped">
				<thead>
					<tr>
						<th>Name</th>
					</tr>
				</thead>
				<tbody>
					<%@templates.each do |t|%>
						<tr>
							<td data-id="<%=t.id%>"><%=t.name%></td>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>




<script>

	$("#select_all").on("click", function(){
		if($("#select_all").text() == "Select All"){
			$("tbody tr td").each(function(){
				$(this).css("background-color", "lightblue");
				$("#select_all").text("De-Select All");
			});
		}else{
			$("tbody tr td").each(function(){
				$(this).css("background-color", "transparent");
				$("#select_all").text("Select All");
			});		
		}
	});

	$("tbody tr td").on("click", function(){
		clickTemplate($(this));
	});


	function clickTemplate(cell){
		if($(cell).css("background-color") === "rgb(173, 216, 230)"){
			$(cell).css("background-color", "transparent");
		}else{
			$(cell).css("background-color", "lightblue");
		}
	}
</script>



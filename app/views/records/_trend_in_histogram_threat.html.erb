<div class="col-xs-12 col-sm-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <b>Threats</b>
      </div>
    </div>
    <div class="panel-body">
      <div class="row">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#threat_chart" onclick="drawThreatPieChart();">Pie Chart</a></li>
          <li><a data-toggle="tab" href="#threat_chart" onclick="drawThreatBarChart();">Bar Chart</a></li>
          <li><a data-toggle="tab" href="#threat_grid">Grid</a></li>
        </ul>
        <div class="tab-content">
          <div id="threat_chart" class="tab-pane fade in active">
            <div id="threat_chart_div" style="width: '100%'"></div>
            <div class="mr10" id="threat_chart_download" align="right"></div>
          </div>
          <div id="threat_grid" class="tab-pane fade">
            <%=render "trend_stats_grid", :records => @threats, :section_name => "threat"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script>

  google.charts.load("current", {packages:["corechart"]});
  google.charts.setOnLoadCallback(drawThreatBarChart);
  google.charts.setOnLoadCallback(drawThreatPieChart);

  function drawThreatBarChart(){
    $("threat_chart_div").html("");
    var colorArray = colorInterpolation(<%=@threats.length%>);
    var data = new google.visualization.DataTable();
    data.addColumn(         "string",       "Threat");
    data.addColumn(         "number",       "Count");
    data.addColumn({type:   "string", role: 'tooltip'});
    data.addColumn({type:   "string", role: 'annotationText'});
    data.addColumn({type:   "string", role: 'style'});


    data.addRows([
      <%@threats.each_with_index do |(k, v), index|%>
        <%="['#{index+1}', #{v}, '#{k}', '#{k}',"%> colorArray[<%=index%>]],
      <%end%>
    ]);
    var view = new google.visualization.DataView(data);
    view.setColumns([0, 1,
      { calc: "stringify",
        sourceColumn: 1,
        type: "string",
        role: "annotation"
      }, 2, 3, 4]);
    var options = {
      titleTextStyle: {color: "black", fontSize: 18, bold: true},
      height: 400,
      title: "Threats Distribution",
      legend: {position: 'none'},
      bar: {groupWidth: "90%"},
    };
    var barChart = new google.visualization.ColumnChart(document.getElementById('threat_chart_div'));
    google.visualization.events.addListener(barChart, 'onmouseover', threatCursorOver);
    google.visualization.events.addListener(barChart, 'onmouseout', threatCursorOut);
    google.visualization.events.addListener(barChart, 'select', function() {
      var selection = barChart.getSelection();
      for (var i = 0; i < selection.length; i++){
        var item = selection[i];
        var threat = data.getValue(item.row, 3);
        $.get("<%=update_subthreat_records_path%>?start_date=<%=params[:start_date]%>&end_date=<%=params[:end_date]%>&threat=" + threat + "&field_id=<%=@field_id%>", function(data){
          $("#subthreat_section").html(data);
        });
      }
    });
    google.visualization.events.addListener(barChart, 'ready', function () {
      document.getElementById('threat_chart_download').innerHTML = '<a href="' + barChart.getImageURI() + '"download><u>Download Chart</u></a>';
    });
    barChart.draw(view, options);
  }

  function drawThreatPieChart(){
    $("threat_chart_div").html("");
    var colorArray = colorInterpolation(<%=@threats.length%>);
    var data = new google.visualization.DataTable();
    data.addColumn(         "string",       "Root Cause");
    data.addColumn(         "number",       "Count");
    data.addColumn({type:   "string", role: 'tooltip'});
    data.addColumn({type:   "string", role: 'annotationText'});
    data.addColumn({type:   "string", role: 'style'});


    data.addRows([
      <%@threats.each_with_index do |(k, v), index|%>
        <%="['#{k}', #{v}, '#{k}', '#{k}',"%> colorArray[<%=index%>]],
      <%end%>
    ]);
    var view = new google.visualization.DataView(data);
    view.setColumns([0, 1,
      { calc: "stringify",
        sourceColumn: 1,
        type: "string",
        role: "annotation"
      }, 2, 3, 4]);
    var options = {
      height: 400,
      title: "Threats Distribution",
      titleTextStyle: {color: "black", fontSize: 18, bold: true},
      legend: {position: 'labeled'},
      bar: {groupWidth: "90%"},
      colors: colorArray,
      pieSliceTextStyle: { color: 'black'},
      pieSliceText: 'annotationText',
      chartArea: {  height: "40%", width: "95%" },
      tooltip: {textStyle: {color: 'black'}, showColorCode: true},
    };
    var pieChart = new google.visualization.PieChart(document.getElementById('threat_chart_div'));
    google.visualization.events.addListener(pieChart, 'onmouseover', threatCursorOver);
    google.visualization.events.addListener(pieChart, 'onmouseout', threatCursorOut);
    google.visualization.events.addListener(pieChart, 'select', function() {
      var selection = pieChart.getSelection();
      for (var i = 0; i < selection.length; i++){
        var item = selection[i];
        var threat = data.getValue(item.row, 3);
        $.get("<%=update_subthreat_records_path%>?start_date=<%=params[:start_date]%>&end_date=<%=params[:end_date]%>&threat=" + threat + "&field_id=<%=@field_id%>", function(data){
          $("#subthreat_section").html(data);
        });
      }
    });
    google.visualization.events.addListener(pieChart, 'ready', function () {
      document.getElementById('threat_chart_download').innerHTML = '<a href="' + pieChart.getImageURI() + '"download><u>Download Chart</u></a>';
    });
    pieChart.draw(view, options);
  }

  function threatCursorOver() {
    $('#threat_chart_div').css('cursor','pointer')
  }
  function threatCursorOut() {
    $('#threat_chart_div').css('cursor','default')
  }

  $(window).bind('resizeEnd', function(){
    drawThreatBarChart();
    drawThreatPieChart();
  });

</script>

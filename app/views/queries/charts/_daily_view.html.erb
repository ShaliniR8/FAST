<div id="daily_bar_chart_div-<%=@field_name%>" style="width:'100%'"></div>
<div class="mr5" id="daily_bar_chart_download" align="right"></div>


<script>

  google.charts.load("current", {packages:["corechart"]});
  google.charts.setOnLoadCallback(drawDailyBarChart);
  var colorArray = colorInterpolation(<%=@daily_data.length%>);


  function drawDailyBarChart(){
    $("#daily_bar_chart_div-<%=@field_name%>").html("");
    var data = new google.visualization.DataTable();
    data.addColumn("string", "Value");
    data.addColumn("number", "Count");
    data.addColumn({type: "string", role: "tooltip"});
    data.addColumn({type: "string", role: "annotationText"});
    data.addColumn({type: "string", role: "style"});
    data.addRows([
      <%@daily_data.each_with_index do |(k, v), index|%>
        [<%="'#{k.strftime("%m-%d-%Y")}', #{v}, '#{k.strftime("%m-%d-%Y")}', '#{k.strftime("%m-%d-%Y")}',"%> colorArray[<%=index%>]],
      <%end%>
    ]);
    var view = new google.visualization.DataView(data);
    view.setColumns([0, 1,
      { calc: "stringify",
        sourceColumn: 1,
        type: "string",
        role: "annotation"
      }, 2, 3, 4]);
    var options = {
      height: 500,
      title: "<%=raw(@label)%>",
      titleTextStyle: {color: "black", fontSize: 18, bold: true},
      legend: { position: 'none'},
      bar: {groupWidth: "90%"},
    };
    var barChartDaily = new google.visualization.ColumnChart(document.getElementById('daily_bar_chart_div-<%=@field_name%>'));


    google.visualization.events.addListener(barChartDaily, 'ready', function () {
      document.getElementById('daily_bar_chart_download').innerHTML = '<a href="' + barChartDaily.getImageURI() + '"download><u>Download Chart</u></a>';
    });
    barChartDaily.draw(view, options);
  }


  $(window).bind('resizeEnd', function(){
    drawDailyBarChart();
    drawDailyBarChart();
  });

</script>

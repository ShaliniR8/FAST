<div class="panel panel-info">
  <div class="panel-heading">
  <div class="panel-title"><b>Airport Search</b>
  <%@airports = Airport.find(:all)%>
  <%@airport_header = Airport.get_header%>
  <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button></div>
  </div>
  <div class="panel-body">
  <div class="row">
    <div class='col-xs-12'>
    <table class="table table-hover" id="airports">
      <thead>
        <tr>
        <%@airport_header.keys.each do |k|%>
          <th><%=k%></th>
        <%end%>
        </tr>
      </thead>
      <tbody>
      <%@airports.each do |u|%>
        <tr uid="<%=u.id%>" class="list_tr">
        <%@airport_header.values.each do |v|%>
          <td><%=u.send(v)%></td>
        <%end%>
        </tr>
      <%end%>
      </tbody>
    </table>
    </div>
  </div>
  </div>
</div>

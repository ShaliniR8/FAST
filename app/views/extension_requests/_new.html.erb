<%@fields = ExtensionRequest.get_meta_fields('form')%>
<%=form_for @extension_request do |f|%>
  <div class="panel-info">
    <div class="panel-heading">
      <div class="panel-title">
        <%=action_name == 'edit' ? 'Edit' : 'New'%> Extension Request
        <button type="button"
          class="close pull-right"
          data-dismiss="modal"
          aria-label="Close">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </div>
    </div>
    <div class="panel-body" style="max-height:calc(100vh - 210px);overflow-y:auto">

      <div class="row">
        <div class="col-xs-12">

          <div class="col-xs-12">
            <div class="well" style="font-weight:bold">
              Please address the length and reason for the extension in the Request Detail box.
            </div>
          </div>

          <%=f.hidden_field :requester_id%>
          <%=f.hidden_field :approver_id%>
          <%=f.hidden_field :owner_id%>
          <%=f.hidden_field :owner_type%>
          <%=f.hidden_field :request_date%>

          <%=render "forms/form_fields",
            :fields => @fields,
            :record => @extension_request,
            :f => f%>

          <%=f.submit "#{action_name == 'edit' ? 'Update' : 'Create'}",
            :class => "btn btn-success pull-right mt10 mb20 mr20",
            :disable_with => "Saving..."%>
        </div>
      </div>
    </div>
  </div>
<%end%>



<style>
  .datepicker {
    z-index: 1200 !important;
  }
  .required_label:after{
    content: " *";
    color: red;
    display: inline;
  }
  .checkbox {
    cursor: pointer;
  }
</style>


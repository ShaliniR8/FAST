<div class="col-xs-12 col-sm-3">
  <div class="panel panel-khaki">
    <div class="panel-heading">
      <div class="panel-title">
        <b>Evaluations Statistics</b>
      </div>
    </div>
    <div class="panel-body" style="height:300px">
      <div class="row">
        <div class="col-xs-12">
          <h5>Average Days to Complete: <%=Evaluation.get_avg_complete%></h5>
        </div>
      </div>
      <div id="evaluations" style="width: 100%"></div>
      <div id="evaluations_download" style="width: 100%" align="right"></div>
    </div>
  </div>
</div>
<script type="text/javascript">
  <%= render partial: "analytics_data.js.erb", locals: {type: :evaluation} %>
  google.charts.load('current', {packages: ['corechart', 'bar']});
  google.charts.setOnLoadCallback(function() {drawChart7(evaluationData, params);});
  function drawChart7(data, params) {
    var eva_options = {
      chart: {title: 'Safety Assurance Statistics'},
      legend:'none',
      height:230,
      colors:['blue'],
      bars: 'horizontal' ,
      chartArea: {left:100}// Required for Material Bar Charts.
    };
    var evaluation_chart = new google.visualization.BarChart(document.getElementById('evaluations'));
    google.visualization.events.addListener(evaluation_chart, 'onmouseover', cursor_pointer);
    google.visualization.events.addListener(evaluation_chart, 'onmouseout', cursor_default);
    google.visualization.events.addListener(evaluation_chart, 'ready', function () {
      document.getElementById('evaluations_download').innerHTML = '<a href="' + evaluation_chart.getImageURI() + '"download><u>Download Chart</u></a>';
    });
    evaluation_chart.draw(google.visualization.arrayToDataTable(data), eva_options);
    google.visualization.events.addListener(evaluation_chart, 'select', function(){
      var all_status=<%=raw @grouped_evaluations.keys%>
      var root_url="<%=evaluations_path%>?status="
      var selection = evaluation_chart.getSelection();
      var message = "";
      var dateParams = params ? "&start_date=" + params.startDate + "&end_date=" + params.endDate : "";
      for (var i = 0; i < selection.length; i++) {
        var item = selection[i];
        message= root_url+all_status[item.row] + dateParams;
      }
      window.location=message;
    });
  }

  $(window).bind('resizeEnd', function() {
    drawChart7(evaluationData, params);
  });
</script>

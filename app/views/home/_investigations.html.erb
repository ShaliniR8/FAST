<div class="col-xs-12 col-sm-3">
  <div class="panel panel-purple">
    <div class="panel-heading">
      <div class="panel-title">
        <b>Investigations Statistics</b>
      </div>
    </div>
    <div class="panel-body" style="height:300px">
      <div class="row">
        <div class="col-xs-12">
          <h5>Average Days to Complete: <%=Investigation.get_avg_complete%></h5>
        </div>
      </div>
      <div id="investigations" style="width: 100%"></div>
      <div id="investigations_download" style="width: 100%" align="right"></div>
    </div>
  </div>
</div>
<script type="text/javascript">

  <%= render partial: "analytics_data.js.erb", locals: {type: :investigation} %>
  google.charts.load('current', {packages: ['corechart', 'bar']});
  google.charts.setOnLoadCallback(function() {drawChart5(investigationData, params);});
  function drawChart5(data, params) {
    var inv_options = {
      chart: {title: 'Safety Assurance Statistics'},
      legend:'none',
      height:230,
      colors:['blue'],
      bars: 'horizontal' ,
      chartArea: {left:100}// Required for Material Bar Charts.
    };

    var investigation_chart = new google.visualization.BarChart(document.getElementById('investigations'));
    google.visualization.events.addListener(investigation_chart, 'onmouseover', cursor_pointer);
    google.visualization.events.addListener(investigation_chart, 'onmouseout', cursor_default);
    google.visualization.events.addListener(investigation_chart, 'ready', function () {
      document.getElementById('investigations_download').innerHTML = '<a href="' + investigation_chart.getImageURI() + '"download><u>Download Chart</u></a>';
    });
    investigation_chart.draw(google.visualization.arrayToDataTable(data), inv_options);
    google.visualization.events.addListener(investigation_chart, 'select', function(){
      var all_status=<%=raw @grouped_investigations.keys%>
      var root_url="<%=investigations_path%>?status="
      var selection = investigation_chart.getSelection();
      var message = "";
      var dateParams = params ? "&start_date=" + params.startDate + "&end_date=" + params.endDate : "";
      for (var i = 0; i < selection.length; i++) {
        var item = selection[i];
        message= root_url+all_status[item.row] + dateParams;
      }
      window.location=message;
    });
  }
  $(window).bind('resizeEnd', function() {
    drawChart5(investigationData, params);
  });
</script>

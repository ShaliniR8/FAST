<div class="col-xs-12 col-sm-3">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <div class="panel-title">
        <b>Job Aids Statistics</b>
      </div>
    </div>
    <div class="panel-body" style="height:300px">
      <div class="row">
        <div class="col-xs-12">
          <h5>Average Days to Complete: <%=JobAid.get_avg_complete%></h5>
        </div>
      </div>
      <div id="jobaids" style="width: 100%"></div>
      <div id="jobaids_download" style="width: 100%" align="right"></div>
    </div>
  </div>
</div>
<script type="text/javascript">
  <%= render partial: "analytics_data.js.erb", locals: {type: :jobaid} %>
  google.charts.load('current', {packages: ['corechart', 'bar']});
  google.charts.setOnLoadCallback(function() {drawChartjobaids(jobaidData);});
  function drawChartjobaids(data) {
    var job_options = {
      chart: {title: 'SMS IM Statistics'},
      legend:'none',
      height:230,
      colors:['blue'],
      bars: 'horizontal',
      chartArea: {left:100} // Required for Material Bar Charts.
    };

    var jobaids_chart = new google.visualization.BarChart(document.getElementById('jobaids'));
    google.visualization.events.addListener(jobaids_chart, 'onmouseover', cursor_pointer);
    google.visualization.events.addListener(jobaids_chart, 'onmouseout', cursor_default);
    google.visualization.events.addListener(jobaids_chart, 'ready', function () {
      document.getElementById('jobaids_download').innerHTML = '<a href="' + jobaids_chart.getImageURI() + '"download><u>Download Chart</u></a>';
    });
    jobaids_chart.draw(google.visualization.arrayToDataTable(data), job_options);
    google.visualization.events.addListener(jobaids_chart, 'select', function(){
      var all_status=<%=raw @jobaids.keys%>
      var root_url="<%=ims_path%>?type=JobAid&status="
      var selection = jobaids_chart.getSelection();
      var message = "";
      for (var i = 0; i < selection.length; i++) {
        var item = selection[i];
        message= root_url+all_status[item.row];
      }
      window.location=message;
    });
  }


  $(window).bind('resizeEnd', function() {
    drawChartjobaids(jobaidData);
  });
</script>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
  <hr/>
  <h4><b>RISK ASSESSMENT</b></h4>
  <div class="form-group form-inline col-sm-4">
    <%=f.label :severity,"Baseline Severity"%>
    <%=f.select :severity,@frequency,{:include_blank=>""},{:id=>"sev",:class=>"form-control ml5"}%>
  </div>
  <div class="form-group form-inline col-sm-4">
    <%=f.label :likelihood,"Baseline Likelihood"%>
    <%=f.select :likelihood,@like,{:include_blank=>""},{:id=>"like",:class=>"form-control ml5"}%>
  </div>
  <div class="form-group form-inline col-sm-4">
    <%=f.label :risk_factor, "Baseline Risk Factor"%>
    <%=f.text_field :risk_factor ,{:class=>"form-control ml5",:readonly=>"true",:id=>"risk",:style=>"min-width:150px"}%>
  </div>
  <div class="form-group col-xs-12">
    <%=f.label :statement, "Notes"%>
    <%=f.text_area :statement, {:class=>"form-control ml5",:rows=>"3"}%>
  </div>
  <%=render "shared/bsk_risk_matrix_rating_key"%>
</div>

<script type="text/javascript" src="/javascripts/utility/format-builder.js"></script>
<div class="panel panel-warning">
  <div class="panel-heading">
    <div class="panel-title">
      <b>Baseline Risk Assessment</b><button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button>
    </div>
  </div>
  <div class="panel-body">
    <%=form_for @owner do |f|%>
      <div class="row col-xs-12" style="max-height:500px;overflow-y:auto;">
        <%=render '/shared/baseline_content', :f => f%>
      </div>
      <div class="col-xs-12">
        <%=f.submit "Save Baseline Risk",:class=>"btn btn-success pull-right mr5", disable_with: "Saving..."%>
      </div>
    <%end%>
  </div>
</div>


<script>
  $(document).ready(function(){
    $("#<%=@owner.severity%>-<%=Investigation.get_likelihood.index(@owner.likelihood)%>").html("<span class='glyphicon glyphicon-remove' style='color:red'></span>");
    $('#sev').on('change',function(){
      reset_risk();
    });
    $('#like').on('change',function(){
      reset_risk();
    });
  });
</script>

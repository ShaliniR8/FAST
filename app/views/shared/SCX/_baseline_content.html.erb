<%=render "shared/instructions", :instruction =>
  "Select <b>Baseline Probability</b> and <b>Baseline Severity</b> from the table to assess risk."%>

<div class="form-group col-xs-12">
  <%=f.label :statement, "Notes"%>
  <%=f.text_area :statement, {:class => "form-control ml5", :rows => "2"}%>
</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%=render "shared/#{AIRLINE_CODE}/risk_definitions"%>
  <%=render "shared/#{AIRLINE_CODE}/form_severity", locals: {risk_type: 'baseline'}%>
</div>
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%=render "shared/#{AIRLINE_CODE}/form_probability", locals: {risk_type: 'baseline'}%>
  <%=render "shared/#{AIRLINE_CODE}/form_risk_table", locals: {risk_type: 'baseline'}%>
</div>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
  <hr/>
  <h4><b>RISK ASSESSMENT</b></h4>
  <div class="form-group form-inline col-sm-4">
    <%=f.label :severity_after, "Mitigated Severity"%>
    <%=f.select :severity_after,@frequency,{:include_blank=>""},{:id=>"sev",:class=>"form-control ml5"}%>
  </div>
  <div class="form-group form-inline col-sm-4">
    <%=f.label :likelihood_after,"Mitigated Likelihood"%>
    <%=f.select :likelihood_after,@like,{:include_blank=>""},{:id=>"like",:class=>"form-control ml5"}%>
  </div>
  <div class="form-group form-inline col-sm-4">
    <%=f.label :risk_factor_after, "Mitigated Risk Factor"%>
    <%=f.text_field :risk_factor_after ,{:class=>"form-control ml5",:readonly=>"true",:id=>"risk",:style=>"min-width:150px"}%>
  </div>
  <div class="form-group col-xs-12">
    <%=f.label :statement,"Notes"%>
    <%=f.text_area :statement, {:class=>"form-control ml5", :rows=>"3"}%>
  </div>
  <%=render "shared/bsk_risk_matrix_rating_key"%>
</div>

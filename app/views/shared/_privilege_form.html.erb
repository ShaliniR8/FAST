<div class="modal fade" id="group_access" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="panel panel-warning">
				<div class="panel-heading">
					<div class="panel-title">
						<b>Allowed Privileges</b>
						<button type="button"
							class="close pull-right"
							data-dismiss="modal"
							aria-label="Close">
							<span class="glyphicon glyphicon-remove"></span>
						</button>
					</div>
				</div>

				<div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">

						<div class="col-xs-12">
							<p style='font-weight:bold'>
								<span style="color:red">
									*If no privileges are selected, all privileges will be granted access in case no user can access it.
								</span>
							</p>
							<%@privileges.each do |p|%>
								<div class="form-group form-inline col-xs-4">
									<%=check_box_tag target,
										p.id,
										(owner.get_privileges.include? p.id.to_s),
										:class => "form-control privilege" %>
									<%=f.label :privileges, p.name%>
								</div>
							<%end%>
						</div>
						<div class="col-xs-12">
							<%=link_to "Uncheck All","#",:class=>"btn btn-info pull-right",:onclick=>"uncheckall()"%>
							<%=link_to "Check All","#",:class=>"btn btn-info pull-right mr5",:onclick=>"checkall(true)"%>
						</div>

				</div>
			</div>
		</div>
	</div>
</div>



<script>
	function checkall()
	{
		$('.privilege').prop("checked",  "checked");
	}
	function uncheckall()
	{
		$('.privilege').prop("checked",false);
	}

	$(document).ready(function(){
		$(window).trigger('resize');
	});
</script>

<%if CONFIG::GENERAL[:base_risk_matrix]%>
  <%if %w[Trial Demo].include?(AIRLINE_CODE) && type == 'hazards'%>
    <!--if Demo and Hazards use BOE's matrix-->
    <%=render "shared/BOE/show_matrix",
      :owner => owner,
      :show_btns => show_btn,
      :allow_baseline => defined?(allow_baseline) ? allow_baseline : true,
      :allow_mitigate => defined?(allow_mitigate) ? allow_mitigate : true,
      :can_change => can_change%>
  <%else%>
    <%=render "shared/bsk_risk_matrix_show",
      :owner => owner,
      :type => type,
      :allow_baseline => defined?(allow_baseline) ? allow_baseline : true,
      :allow_mitigate => defined?(allow_mitigate) ? allow_mitigate : true,
      :show_btns => show_btn,
      # :like => defined?(like) ? like : nil,
      # :color_matrix => defined?(color_matrix) ? color_matrix : nil,
      # :frequency => defined?(frequency) ? frequency : nil,
      :can_change => can_change%>
  <%end%>
<%else%>
  <%allow_baseline = true%>
  <%allow_mitigate = true%>
  <%if defined?(CONFIG::RISK_ARRAY) && CONFIG::RISK_ARRAY[type.to_sym].present?%>
    <%allow_baseline = CONFIG::RISK_ARRAY[type.to_sym][:baseline]%>
    <%allow_mitigate = CONFIG::RISK_ARRAY[type.to_sym][:mitigate]%>
  <%end%>
  <%=render "shared/#{AIRLINE_CODE}/show_matrix",
    :owner => owner,
    :show_btns => show_btn,
    :allow_baseline => allow_baseline,
    :allow_mitigate => allow_mitigate,
    :can_change => can_change%>
<%end%>

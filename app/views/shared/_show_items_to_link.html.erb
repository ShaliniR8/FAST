<%=form_tag eval("update_links_#{owner_class.singularize}_path"), method: :post do%>
  <%=hidden_field_tag 'id', owner.id %>
  <%=hidden_field_tag 'item_type', item_type%>
  <%=hidden_field_tag 'items_selected', '' %>
  <div class="panel-warning">
    <div class="panel-heading">
      <div class="panel-title"><%="Add #{item_type} to #{owner_class.classify} ID ##{owner.id}"%>
        <button type="button" id="close_modal" class="close pull-right" data-dismiss="modal" aria-label="Close">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </div>
    </div>
    <div class="panel-body" style="max-height: calc(100vh - 400px);overflow-y:auto">
      <div class="col-xs-12">
        <table id="all_items_table" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Status</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <%@items.each do |item|%>
              <tr class="pointer" id="<%=item.id%>">
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=item.id%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=item.title%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=item.status%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12 hidden">
                    <input type="checkbox" id="<%=item.id%>" value="<%=item.title%>" class="items">
                  </div>
                  <strong id="<%=item.id%>" style="color:red">
                    Not Added
                  </strong>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <%=submit_tag "Link Items", :class => "btn btn-success pull-right mt5", :disable_with => "Linking...", :onclick => 'return serialize_item_ids();'%>
    </div>
  </div>
<%end%>

<style type="text/css">
  .checkbox-custom input[type=checkbox]{ position: relative; }

  .pointer{
    cursor:pointer;
  }
</style>

<script type="text/javascript">
  $(document).ready(function() {
    let all_items_table = $('#all_items_table').DataTable({
        "iDisplayLength": -1,
        "aaSorting": [[ 0, "desc" ]]
    });

    $("tr").on('click', function() {
      id = $(this).attr('id');
      $('.items').each(function() {
        if($(this).attr('id') == id) {
          if ($(this).is(':checked')) {
            $(this).prop('checked', false);
            $(this).closest('td').find('strong').first().css("color", "red");
            $(this).closest('td').find('strong').first().html("Not Added");
          } else {
            $(this).prop('checked', true);
            $(this).closest('td').find('strong').first().css("color", "green");
            $(this).closest('td').find('strong').first().html("To be Added");
          }
        }
      });
    });
  });

  function serialize_item_ids() {
    let items = '';
    let elems = $("input.items:checked");

    elems.each(function(index, elem){
        items += $(elem).attr('id') + ",";
    });

    if (items == ''){
      alert("Please select at least 1 item or close the pop-up");
      return false;
    }
    $('#items_selected').val(items);
    console.log(items)
    return true;
  }
</script>

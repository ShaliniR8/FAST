<%if CONFIG::GENERAL[:base_risk_matrix]%>
  <%if %w[Trial Demo].include?(AIRLINE_CODE) && type == 'hazards'%>
    <!--if Demo and Hazards use BOE's matrix-->
    <%=render "shared/BOE/baseline_form", :f => f%>
  <%else%>
    <%=render "shared/baseline_form", :f => f, :owner => @owner %>
  <%end%>
<%else%>
  <%if defined?(CONFIG::RISK_ARRAY) && CONFIG::RISK_ARRAY[type.to_sym].present?%>
    <%risk_option = CONFIG::RISK_ARRAY[type.to_sym][:form]%>
    <%if risk_option.present?%>
      <%=render "shared/#{AIRLINE_CODE}/#{risk_option}_form",
      :f => f,
      :owner => @owner %>
    <%end%>
  <%else%>
    <%=render "shared/#{AIRLINE_CODE}/baseline_form", :f => f %>
  <%end%>
<%end%>

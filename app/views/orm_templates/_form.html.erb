<script type="text/javascript" src="/javascripts/utility/extra_fields.js"></script>
<script type="text/javascript" src="/javascripts/utility/nested_fields.js"></script>
<script type="text/javascript" src="/javascripts/utility/collapse-panel2.js"></script>
<script type="text/javascript" src="/javascripts/utility/validate-form.js"></script>


<div class="item active mt50" style="height:auto;">
  <div class="grid per90 center-block">
    <div class="col-lg-12">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title"><b><%=@title%></b>
            <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button>
          </div>
        </div>
        <div class="panel-body" id="form_body">
          <%=form_for @template do |f|%>
            <div class="row">
              <div class="form-group col-xs-7">
                <%=f.label :name, "Name"%>
                <%=f.text_field :name, :class => "form-control"%>
              </div>
              <div class="form-group col-xs-10">
                <%=f.label :description, "Description"%>
                <%=f.text_area :description, :class => "form-control", :rows => 3%>
              </div>
            </div>
            <%=f.submit "Save",
              :class => "btn btn-success pull-right",
              :disable_with => "Saving..."%>
            <%=link_to "Cancel",
              orm_templates_path,
              :class => "btn btn-warning pull-right mr5",
              :disable_with => "Redirecting..."%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

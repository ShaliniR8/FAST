<%@fields = Verification.get_meta_fields('form')%>
<%=form_for @verification do |f|%>
  <div class="panel-steelblue">
    <div class="panel-heading">
      <div class="panel-title">
        New Verification
        <button type="button"
          class="close pull-right"
          data-dismiss="modal"
          aria-label="Close">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </div>
    </div>
    <div class="panel-body" style="max-height:calc(100vh - 210px);overflow-y:auto">

      <div class="row">
        <div class="col-xs-12">

          <div class="col-xs-12">
            <div class="well" style="font-weight:bold">
              1. Enter the Verification Date using the calendar.</br>
              2. Enter what needs to be verified and the reason why in the Verification Detail box.</br>
            </div>
            <%=f.hidden_field :owner_type%>
            <%=f.hidden_field :owner_id%>
            <%=f.hidden_field :users_id%>
          </div>

          <%=render "forms/form_fields",
            :fields => @fields,
            :record => @verification,
            :f => f%>

          <%=f.submit "Save",
            :class => "btn btn-success pull-right mt10 mb20 mr20",
            :disable_with => "Saving..."%>
        </div>


      </div>

    </div>
  </div>
<%end%>




<script type="text/javascript" src="/javascripts/utility/format-builder.js"></script>
<script type="text/javascript" src="/javascripts/utility/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="/javascripts/utility/dataTables.bootstrap.min.js"></script>
<script type="text/javascript" src="/javascripts/utility/dataTables.buttons.min.js"></script>

<%=form_for @owner do |x|%>
  <%=x.fields_for :contacts,@contact do |f|%>
    <div class="panel-warning">
      <div class="panel-heading">
        <div class="panel-title">New Contact
          <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </div>
      </div>
      <div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
        <div class="row">
          <% fields = Contact.get_meta_fields('form') %>
          <%= render '/forms/form_fields',
                     :f=> f,
                     :fields => fields,
                     :record => @contact %>
        </div>
        <%=x.submit "Add Contact",:class=>"btn btn-success pull-right mt5", disable_with: "Saving..."%>
      </div>
    </div>
  <%end%>
<%end%>


<script>
  $(document).ready(function(){
    $(".close").click(function() {
      console.log('reload')
      document.body.style.cursor = "wait";
      location.reload();
      return false;
    })
  });
</script>
<%if owner.comments.present?%>
  <div class="col-xs-12">
    <div class="panel panel-lightskyblue">
      <div class="panel-heading click-heading collapsed">
        <div class="panel-title">
          <b>Comments</b>
          <span class="pull-right clickable">
            <i class="mt5 glyphicon glyphicon-chevron-down"></i>
          </span>
        </div>
      </div>
      <div class="panel-body" style="display:none">
        <div class="row">
          <div class="col-xs-12">
            <table class="table table-striped table-bordered">
              <thead>
                <th>Submitter</th>
                <th>Submit Date</th>
                <th>Content</th>
              </thead>
              <tbody>
                <%owner.comments.preload(:viewer).each do |comment|%>
                  <tr>
                    <td><%=comment.viewer.full_name rescue "<b>External</b> #{comment.alt_user}".html_safe%></td>
                    <td><%=date_to_string(Date.parse comment.get_submission_time)%></td>
                    <td><%=comment.get_content%></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>


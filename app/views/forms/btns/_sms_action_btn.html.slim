- if owner.status == 'Assigned' &&\
  ([owner.responsible_user, owner.approver].include?(current_user) ||\
  current_user.has_access(permission, 'admin', admin: true, strict: true))
  = link_to 'Add Corrective Action',
    new_sms_action_path( \
      owner_id: owner.id,
      owner_type: owner.class.name),
    class: 'btn btn-success pull-right mr5 mb5',
    disable_with: 'Adding...'

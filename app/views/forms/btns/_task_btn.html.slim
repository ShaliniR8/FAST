- if !['Pending Approval', 'Completed'].include? owner.status
  = link_to 'Add Task',
    '#',
    class: 'btn btn-success pull-right mr5 mb5',
    id: 'task_btn',
    'data-toggle' => 'modal',
    'data-target' => '.bs-example-modal-lg'

javascript:
  $('#task_btn').on('click',function(){
    $.get('#{eval("new_task_#{owner_class}_path(owner)")}',function(data){
      $(".modal-content").html(data);
      $(window).trigger('resize');
    });
  });

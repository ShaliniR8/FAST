<style>
	.table-centered th,
	.table-centered td{
		text-align: center;
	}
</style>

<div class="col-xs-12 col-lg-12"%>
	<div class="panel panel-info">
		<div class="panel-heading click-heading collapsed">
			<div class="panel-title">
				<b>Risk Matrix</b><span class="pull-right clickable"><i class="mt5 glyphicon glyphicon-chevron-down"></i></span>
			</div> 
		</div>
		<div class="panel-body" style="display:none"> 
			<div class="row">
				<div class="col-xs-12">
					<%if current_user.has_access(type,"edit") && allow_mitigate%>
						<%=link_to "Mitigate Risk","#",:class=>"btn btn-warning pull-right ml5",:id=>"mitigate_btn","data-toggle"=>"modal","data-target"=>".bs-example-modal-lg"%>
						<%=link_to "Baseline Risk","#",:class=>"btn btn-info pull-right",:id=>"baseline_btn","data-toggle"=>"modal","data-target"=>".bs-example-modal-lg"%>
					<%end%>

				</div>
			</div>
			<div class="row">
				<div class='col-xs-3'><b>Severity: </b><%=owner.severity%></div>
				<div class='col-xs-3'><b>Likelihood: </b><%=owner.likelihood%></div>
				<div class='col-xs-6'><b>Risk Factor: </b><%=owner.risk_factor%></div>
				<div class='col-xs-3'><b>Severity after Mitigation: </b><%=owner.severity_after%></div>
				<div class='col-xs-3'><b>Likelihood after Mitigation: </b><%=owner.likelihood_after%></div>
				<div class='col-xs-6'><b>Risk Factor after Mitigation: </b><%=owner.risk_factor_after%></div>
				<div class='col-xs-10'><b>Notes: </b><%if owner.statement.present?%><%=owner.statement.gsub(/\n/, '<br/>').html_safe%><%end%></div>
				<div class="col-xs-12">
					<table id="<%=type%><%=owner.id%>" class="table table-bordered table-centered" cellspacing="0" width="100%">
						<tr>
							<th style="width:18%"></th>
							<th colspan="5"><center>Likelihood</center></th>
						</tr>
						<tr>
							<th style="width:18%"><center>Severity</center></th>
							<%like.each do |header| %>
								<th style="width:15%"><center><%=header%></center></th>
							<%end%>
						</tr>
						<%color_matrix.each_index do |row|%>
							<tr>
								<td><center><b><%=frequency[row]%></b></center></td>
								<%color_matrix[row].each_index do |cell|%>
									<td id="<%=4-row%>-<%=cell%>" style="width:15%;background:<%=color_matrix[row][cell]%>" background="<%=color_matrix[row][cell]%>">
									</td>    
							<%end%>
							</tr>
						<%end%>
					</table>
					<span class='glyphicon glyphicon-remove' style='color:red'></span><b> Baseline Risk Assessment</b></br>
					<span class='glyphicon glyphicon-ok' style='color:red'></span><b> Substitute Risk Assessment</b>   
				</div>      
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function(){
		$("#<%=type%><%=owner.id%> > tbody > tr > #<%=owner.severity%>-<%=Investigation.get_likelihood.index(owner.likelihood)%>").append("<span class='glyphicon glyphicon-remove' style='color:red'></span>");
		$("#<%=type%><%=owner.id%> > tbody > tr > #<%=owner.severity_after%>-<%=Investigation.get_likelihood.index(owner.likelihood_after)%>").append("<span class='glyphicon glyphicon-ok' style='color:red'></span>");
	});
</script>
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<div class="col-xs-12 col-sm-12">
	<div class="panel panel-default">
		<div class="panel-heading click-heading collapsed">
			<div class="panel-title">
				<b>Filter</b>
			</div>
		</div>
		<div class="panel-body">
				<%=form_tag filter_hazards_path, :method => "post" do %>
					<div class="row">
						<div class="form-group form-inline col-xs-3">
							<%=label_tag :start_date, "Start Date"%>
							<%=text_field_tag :start_date, params[:start_date], :class => "form-control ml5 field-date"%>
						</div>
						<div class="form-group form-inline col-xs-3">
							<%=label_tag :end_date, "End Date"%>
							<%=text_field_tag :end_date, params[:end_date], :class => "form-control ml5 field-date"%>
						</div>
						</br>
					</div>
					<div class="row">
						<div class="form-group form-inline col-xs-12 mt10">
							<div class="col-xs-3">
								<%=check_box_tag :all_categories, "Yes", params[:all_categories].present? ? params[:all_categories] : false, {"data-toggle"=>"toggle", "data-onstyle"=>"success", "data-on"=>"Yes", "data-off"=>"No"}%>
								<%=label_tag :all_categories, "All Categories", :class => "ml20 mb20"%>
							</div>
							<div class="col-xs-1">
								<h4>OR</h4>
								<%=hidden_field_tag :category_id, "", :class => "category_id"%>
							</div>
							<div class="col-xs-6">
								<%=render "/root_causes/select_category_in_trending", :ancestor_ids => ancestor_ids%>
							</div>
						</div>
					</div>
	
					<%=submit_tag "Filter", :class => "btn btn-success pull-right", :disable_with => "Filtering..."%>
					<%=link_to "Reset", root_cause_trend_hazards_path, :class => "btn btn-default pull-right mr5", :disable_with => "Resetting..."%>
				<%end%>
			</div>
		</div>
	</div>
</div>


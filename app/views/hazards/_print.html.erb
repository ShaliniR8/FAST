<div class="title">
	Hazard #<%=owner.get_id%>: <%=owner.title%>
</div>

<div class="content">
	<%=render "forms/print_fields", 
		:fields => Hazard.get_meta_fields('show'), 
		:owner => owner, 
		:deidentified => deidentified%>

	<%if BaseConfig.airline[:base_risk_matrix]%>
		<%=render "/shared/print_risk_matrix", :owner => owner %>
	<%else%>
		<%=render "/shared/#{BaseConfig.airline[:code]}/print_risk_matrix", :owner => owner%>
	<%end%>

	<%=render "forms/print_root_causes", :owner => owner%>


	<%=render "forms/print_descriptions", 
		:title => 'Descriptions', 
		:descriptions => owner.descriptions%>

	
	<%owner.risk_controls.each do |risk_control|%> 
		<div class="col-xs-12">
			<hr>          
			<%=render "/risk_controls/print", 
				:owner => risk_control, 
				:deidentified => deidentified%>
		</div>
	<%end%>

</div>


<%=render '/forms/show_fields', :fields => SmsAction.get_meta_fields('show'), :record => owner%>

<%if BaseConfig.airline[:base_risk_matrix]%>
	<%=render "shared/bsk_risk_matrix_show",
		:owner => owner,
		:type => "sms_actions",
		:allow_mitigate => true,
		:show_btns => show_btn%>
<%else%>
	<%=render "shared/#{BaseConfig.airline[:code]}/show_matrix",
		:owner => owner,
		:show_btns => show_btn%>
<%end%>

<%can_change = owner.status != "Pending Approval" && owner.status != "Completed" && show_btn%>

<%=render '/causes/all',
	:owner => owner,
	:cause_type => 'description',
	:can_change => can_change%>

<%=render "/sms_actions/cost", :owner => owner%>

<%=render "/verifications/show_verifications",
	:fields => Verification.get_meta_fields('index'),
	:records => owner.verifications,
	:title => "Verifications"%>

<%=render "/extension_requests/show_requests",
	:fields => ExtensionRequest.get_meta_fields('index'),
	:records => owner.extension_requests,
	:title => "Extension Requests"%>

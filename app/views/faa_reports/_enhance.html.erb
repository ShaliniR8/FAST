<script type="text/javascript" src="/javascripts/utility/format-builder.js"></script>
<%=form_for @report do |ff|%>
  <%=ff.fields_for :issues, @issue do |f|%>
    <div class="panel-warning">
      <div class="panel-heading">
        <div class="panel-title">
          New Safety Enhancement
          <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </div>
      </div>
      <div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
        <div class="row">
          <%=f.hidden_field :user_id, :value => current_user.id%>
          <%=render "/forms/form_fields", :f => f, :fields => Issue.get_meta_fields('form'), :record => @issue%>
        </div>
        <%=f.submit "Save", :class => "btn btn-success pull-right mt5", :disable_with => "Saving..."%>
      </div>
    </div>
  <%end%>
<%end%>



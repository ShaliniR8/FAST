<div class="panel panel-info">
  <div class="panel-heading">
    <div class="panel-title">Agendas
    <button type="button" id="close_agenda_modal" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button></div>
  </div>
  <div class="panel-body">
    <div class="row">
      <%=form_tag save_agenda_meeting_path(@meeting), :remote => true do%>
        <div class="col-xs-12" style="max-height:400px;overflow-y:auto">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <%@headers.each do |h|%>
                  <th><%=h[:title]%></th>
                <%end%>
                <th>Comment</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody id="agendas">
              <%@agendas.each do |a|%>
                <%if a.user_id==current_user.id%>
                  <tr id="agends_<%= a.id %>">
                    <td><%=text_field_tag "title",a.title,:name=>"title_#{a.id}",:class=>"form-control"%></td>
                    <td width=8%><%=select_tag "status_#{a.id}",options_for_select(@status,a.status),:include_blank=>true,:class=>"form-control"%></td>
                    <td><%=a.get_user%></td>
                    <td><%=a.get_created%></td>
                    <td><%=a.get_updated%></td>
                    <td width=8%><%=select_tag "discussion_#{a.id}",options_for_select(@tof,a.discussion),:include_blank=>true,:class=>"form-control"%></td>

                    <td>
                      <%=select_tag "accepted_#{a.id}",
                        CONFIG.sr::GENERAL[:configurable_agenda_dispositions] ?
                          options_for_select(CONFIG.custom_options['Dispositions']) :
                          options_for_select(@accept_deline,a.accepted),
                        :include_blank=>true,
                        :class => "form-control"%>
                    </td>

                    <td><%=text_area_tag "comment_#{a.id}",a.comment,:rows=>"2",:class=>"form-control"%></td>
                    <td><button type="button" id="<%="close_#{a.id}"%>" class="close close_btn" aria-label="Close"><i class="mt5 glyphicon glyphicon-remove close_icon"></i></button></td>
                    <%=hidden_field_tag "destroy_#{a.id}", :value=>0%>
                  </tr>
                <%else%>
                  <tr>
                    <td><%=a.title%></td>
                    <td width=8%><%=a.status%></td>
                    <td><%=a.get_user%></td>
                    <td><%=a.get_created%></td>
                    <td><%=a.get_updated%></td>
                    <td width=8%><%=a.discussion ? "Yes" : "No"%></td>
                    <td><%=CONFIG.sr::GENERAL[:configurable_agenda_dispositions] ? a.accepted : (a.accepted == "true" ? 'Accepted' : 'Declined')%></td>
                    <td><%=a.comment.gsub(/\n/, '<br/>').html_safe%></td>
                    <td></td>
                  </tr>
                <%end%>
              <%end%>
            </tbody>
          </table>
        </div>
        <div class="col-xs-12">
          <%=hidden_field_tag :event_id, @report.id%>
          <%=submit_tag "Save Agenda",:class=>"btn btn-success pull-right", :disable_with => "Saving..."%>
          <%=link_to_agenda_fields "Add",:agendas,"AsapAgenda","agenda_fields","agendas",:class=>"btn btn-info pull-right mr5"%>
        </div>
      <%end%>
    </div>
  </div>
</div>

<style>
  .close_btn {
    color: red;
    font-size: 23px;
  }

  .close_icon {
    top: 10px;
    right: 10px;
  }

  .removed {
    opacity: 0.4;
  }
</style>

<script type="text/javascript">
  document.querySelectorAll('.close_btn').forEach( close_btn => {
    close_btn.addEventListener("click", function(event) {
      const row = event.srcElement.closest("tr")
      let result = row.classList.toggle("removed");

      if (result) {
        row.classList.add('removed')
        row.querySelectorAll(".form-control").forEach( input_field => {
          input_field.disabled = true
        })
      } else {
        row.classList.remove('removed')
        row.querySelectorAll(".form-control").forEach( input_field => {
          input_field.disabled = false
        })
      }
    });
  })

  document.querySelector('form').addEventListener('submit', function() {
    document.querySelectorAll('.removed').forEach( element => {
      element.querySelector("[type='hidden']").value = true
    })
  })
</script>

<%load_special_matrix(owner)%>
<%like = Finding.get_likelihood%>
<%frequency = (0..4).to_a.reverse%>
<% @i18nbase ||= 'sa.finding' %>

<%=render '/forms/show_fields', :fields => Finding.get_meta_fields('show'), :record => owner%>

<%can_change = current_user.has_access(@type,"edit") &&
  owner.status != "Completed" &&
  owner.status != "Pending Approval"%>

<%=render 'shared/choose_show_matrix',
  :owner => owner,
  :show_btn => show_btn,
  :type => 'findings',
  :allow_mitigate => true,
  :can_change => can_change%>



<% if CONFIG::GENERAL[:has_root_causes] %>
  <%= render '/root_causes/root_causes',
    owner: owner,
    show_btns: true,
    headers: RootCause.get_headers %>
<% end %>

<%=render '/sms_actions/show_all', :owner => owner, :show_btns => false%>
<%=render '/recommendations/show_all', :owner => owner, :show_btns => false%>

<%=render "/forms/show_comment", :owner => owner%>

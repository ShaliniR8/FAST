<div class="item active mt50" id="test2?" style="height:auto;">
  <div class="grid per90 center-block">
    <div class="row">
      <div class="col-xs-12 mb20">
        <%=render "shared/alerts"%>
      </div>
      <div class="col-xs-12">
        <div class="panel panel-warning">
          <div class="panel-heading">
            <div class="panel-title">
              <b>Forgot Password</b>
            </div>
          </div>
          <div class="panel-body collapse in" id="showevent">
            <%= form_tag password_resets_path, :method => :post do %>

              <h5>Enter your email address to reset your password. You may need to check your spam folder or unblock <b><i>engineering@prosafet.com</i></b>.</h5></br>


              <div class="form-group form-inline col-xs-12">
                <%= label_tag :email %>
                <%= text_field_tag :email, params[:email], :class=>"form-control" %>
              </div>
              
              <div class="form-actions pull-right">
                <%= submit_tag "Submit", class:"btn btn-success", disable_with: "Submitting..."%>
              </div>

              <%=link_to "Cancel", root_url , :id=>"cancel-btn", :class=>"mr5 btn btn-warning pull-right"%>
              
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





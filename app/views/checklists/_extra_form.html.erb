<script type="text/javascript" src="/javascripts/utility/extra_fields.js"></script>
<script type="text/javascript" src="/javascripts/utility/format-builder.js"></script>



<%=form_for @record.becomes(Checklist), :html => {:multipart => true} do |f|%>


	<%=f.hidden_field :owner_id, :value => @owner.id%>
	<%=f.hidden_field :created_by_id, :value => current_user.id%>
	<%=f.hidden_field :checklist_header_id, :value => @checklist_header.id%>

	<%=hidden_field_tag :owner_class, @owner.class.name%>

	<div class="col-xs-12">
		<%=link_to "Download Sample Checklist Here",
			export_checklist_header_path(@checklist_header, :format => "csv"),
			:download => "Sample_Checklist.csv",
			:target => "_blank"%>
			<br>
		<%=label_tag :checklist_upload, "Select a file to upload"%>
		<%=file_field_tag :checklist_upload,
			:class => "ml5",
			:style => "display:inline-block",
			:accept => ".csv",
			:id => "csv"%>

		<div class="mr10 mt10">
			<%=f.submit "Add",
				:class => "btn btn-success pull-right mt5 mr5",
				:disable_with => "Adding..."%>
		</div>


	</div>


<%end%>


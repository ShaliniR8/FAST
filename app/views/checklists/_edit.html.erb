<script type="text/javascript" src="/javascripts/utility/nested_fields.js"></script>
<script type="text/javascript" src="/javascripts/utility/checklist-control.js"></script>

<%=form_for @record do |f|%>
  <div class="col-xs-12">
    <div class="panel panel-warning">

      <div class="panel-heading">
        <div class="panel-title">
          <%=action_name.titleize%> Checklist
          <button type="button"
            class="close pull-right"
            data-dismiss="modal"
            aria-label="Close"
            data-backdrop="static"
            data-keyboard="false">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </div>
      </div>

      <div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
        <div class="col-xs-12">

          <%if action_name == 'edit'%>
            <div class="col-xs-12">
              <div class="span4 collapse-group">
                <a class="btn" data-toggle="collapse" data-target="#viewinstruction">View Instructions &raquo;</a>
                <div class="collapse" id="viewinstruction">
                  <div class="col-xs-12">
                    <div class="col-xs-12 well">
                      <ul>
                        <li>
                          Add a Row - creates an additional row with information for the template.
                        </li>
                        <li>
                          <span class= "glyphicon glyphicon-header"></span>
                          - Marks a row as a header, which disables user input for all its fields.
                        </li>
                        <li>
                          <span class= "glyphicon glyphicon-trash"></span>
                          - Removes a row from the template.
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <%end%>

          <table class="table table-bordered table-striped mt10">
            <thead>
              <tr>
                <%@record.checklist_header.checklist_header_items.order(:display_order).each do |item|%>
                  <th><%=item.title%></th>
                <%end%>
                <%if action_name == 'edit'%><th>Actions</th><%end%>
              </tr>
            </thead>
            <tbody id="checklist_rows">
              <%@record.checklist_rows.preload(:checklist_cells).each do |checklist_row|%>
                <%=f.fields_for :checklist_rows, checklist_row do |row_form|%>
                  <%=render 'checklist_row_fields', :checklist_row => checklist_row, :f => row_form, :source => 'Existing'%>
                <%end%>
              <%end%>
            </tbody>
          </table>

          <%if action_name == 'edit'%>
            <%=link_to_add_fields "Add a Row", f, :checklist_rows, {:checklist_header => @record.checklist_header}%>
          <%end%>

        </div>

        <div class="mr10 mt10">
          <%=f.submit "Save", :class => "btn btn-success pull-right", :disable_with => "Saving..."%>
        </div>

      </div>
    </div>
  </div>
<%end%>


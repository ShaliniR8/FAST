<%=
  javascript_include_tag(
    'utility/nested_fields',
    'utility/checklist-control',
    'utility/dirty-form',
  )
%>

<%=form_for @record, html: { class: 'dirty-submit', multipart: true } do |f|%>
  <div class="col-xs-12">
    <div class="panel panel-warning">

      <div class="panel-heading">
        <div class="panel-title">
          <%=action_name.titleize%> Checklist
          <button type="button"
            class="close pull-right"
            data-dismiss="modal"
            aria-label="Close"
            data-backdrop="static"
            data-keyboard="false">
            <span class="glyphicon glyphicon-remove"></span>
          </button>
        </div>
      </div>

      <div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
        <div class="col-xs-12">

          <%if action_name == 'edit'%>

            <div class="col-xs-12 form-group mb10">
              <div class="col-sm-2 mt5">
                <%=f.label :title, 'Checklist Name', class: "pull-right"%>
              </div>
              <div class="col-sm-8">
                <%=f.text_field :title, class: 'form-control pull-left'%>
              </div>
            </div>


            <div class="col-xs-12 form-group mb10">
              <div class="col-sm-2 mt5">
                <%=f.label :assignees, 'Assign To', class: "pull-right"%>
              </div>
              <div class="col-sm-8">
                <%#=f.hidden_field :assignees%>
                <%=f.text_field :assignees, class: 'form-control pull-left json-user-tags'%>
              </div>
            </div>


            <div class="col-xs-12">
              <div class="span4 collapse-group">
                <a class="btn" data-toggle="collapse" data-target="#viewinstruction">View Instructions &raquo;</a>
                <div class="collapse" id="viewinstruction">
                  <div class="col-xs-12">
                    <div class="col-xs-12 well">
                      <ul>
                        <li>
                          Add a Row - creates an additional row with information for the template.
                        </li>
                        <li>
                          <span class= "glyphicon glyphicon-header"></span>
                          - Marks a row as a header, which disables user input for all its fields.
                        </li>
                        <li>
                          <span class= "glyphicon glyphicon-trash"></span>
                          - Removes a row from the template.
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <%end%>

          <table class="table table-bordered table-striped mt10">
            <thead>
              <tr>
                <%@record.checklist_header.checklist_header_items.each do |item|%>
                  <th width="<%=item.size%>%"><%=item.title%></th>
                <%end%>
                <%if action_name == 'edit'%>
                  <th>Actions</th>
                <%else%>
                  <th>Attachments</th>
                <%end%>
              </tr>
            </thead>
            <tbody id="checklist_rows">
              <%@record.checklist_rows.each do |checklist_row|%>
                <%=f.fields_for :checklist_rows, checklist_row do |row_form|%>
                  <%=render 'checklist_row_fields', :checklist_row => checklist_row, :f => row_form, :source => 'Existing'%>
                <%end%>
              <%end%>
            </tbody>
          </table>

          <%if action_name == 'edit'%>
            <%=link_to_add_fields 'Add a Row',
              f,
              :checklist_rows,
              {:checklist_header => @record.checklist_header},
              partial: 'checklist_row_fields'
            %>
          <%end%>

        </div>

        <div class="mr10 mt10">
          <%=f.submit "Save", :class => "btn btn-success pull-right", :disable_with => "Saving..."%>
        </div>

      </div>
    </div>
  </div>
<%end%>



<script src="/plugins/forms/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
<script src="/js/libs/typeahead.bundle.js"></script>
<script>
  $(function(){

    var users = new Bloodhound({
      datumTokenizer: Bloodhound.tokenizers.obj.whitespace('full_name'),
      queryTokenizer: Bloodhound.tokenizers.whitespace,
      identify: function(obj) { console.log(obj); return obj.full_name;},
      prefetch: {
        url: '/users/user_json_request',
        filter: function(users) {
          return $.map(users, function(user) {
            return {
              full_name: user.full_name,
              id: user.id
            };
          });
        }
      }
    });
    users.clearPrefetchCache();
    users.initialize();
    $('.json-user-tags').tagsinput({
      freeInput: false,
      itemValue: 'id',
      itemText: 'full_name',
      typeaheadjs: {
        name: 'users',
        displayKey: 'full_name',
        source: users.ttAdapter()
      }
    });

    // DISPLAY EXISTING ASSIGNEES

    // UPDATE ASSIGNEE LIST
    $('.json-user-tags').on('itemAdded itemRemoved', function(event){
      item_arr = $(item).tagsinput('items');
      hiddenField = $("#" + this.id);
      if (!(typeof event.item === "undefined")) {
        id_arr = [];
        jQuery.each(item_arr, function(index, item) {
          id_arr.push(item.unique_id);
        });
        hiddenField.val(id_arr.toString());
      }
    });


  });
</script>


<table id="checklist_records_<%= checklist.id %>" class="table table-bordered table-striped mt10">
  <thead>
    <tr>
      <% checklist.checklist_header.checklist_header_items.each do |header|%>
        <th width="<%= header.size %>%"><%= header.title %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% checklist.checklist_rows.each do |row| %>
      <tr class='<%= checklist_row.is_header ? 'header-row' : '' %>'>
        <% row.checklist_cells.each do |cell| %>
          <td>
            <%=render 'checklist_headers/preview_field',
              :owner_type => checklist.owner_type,
              :cell => cell,
              :item => cell.checklist_header_item%>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

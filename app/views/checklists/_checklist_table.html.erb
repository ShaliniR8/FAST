<table id="checklist_records_<%checklist.id%>" class="table table-bordered table-striped mt10">
  <thead>
    <tr>
      <%checklist.checklist_header.checklist_header_items.order(:display_order).map(&:title).each do |header|%>
        <th><%=header%></th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <%checklist.checklist_rows.order(:id).each do |checklist_row|%>
      <tr>
        <%checklist_row.checklist_cells.order{|x| x.checklist_header_item.display_order}.each do |checklist_cell|%>
          <%if checklist_row.is_header && checklist_cell.checklist_header_item.editable%>
          <%else%>
            <td>
              <%=render 'checklist_headers/preview_field',
                :owner_type => checklist.owner_type,
                :cell => checklist_cell,
                :item => checklist_cell.checklist_header_item%>
            </td>
          <%end%>
        <%end%>
      </tr>
    <%end%>
  </tbody>
</table>

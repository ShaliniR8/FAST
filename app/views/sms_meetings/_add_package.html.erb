<div class="table-responsive mt10">
  <table id="packages" class="table table-hover">
    <thead>
      <tr>
        <%@package_headers.each do |header|%>
          <th class="<%=header[:size]%>">
            <%=header[:title]%>
          </th>
        <%end%>
          <th class="col-xs-3 col-lg-3">Action</th>
      </tr>
    </thead>
    <tbody>
      <%@packages.each do |package|%>
        <tr package="<%=package.id%>">
          <%@package_headers.each do |header|%>
            <td><%=package.send(header[:field])%></td>
          <%end%>
          <%if (package.status) == "Open"%>
            <td><a class="btn btn-info add_btn">Add</a></td>
          <%else%>
            <td>Added</td>
          <%end%>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
<style>
.table th {
  text-align: center;
}

.table td {
  text-align: center;
}
</style>







<div class="panel-warning">
	<div class="panel-heading">
		<div class="panel-title">Add Packages
		<button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button></div>
	</div>
	<div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
		<table class="table table-hover" id="packages_table">
			<thead>
				<tr>
					<%@package_headers.each do |h|%>
						<th><%=h[:title]%></th>
					<%end%>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<%@packages.each do |p|%>
					<tr>					
						<%@package_headers.each do |h|%>
							<td><%=p.send(h[:field])%></td>
						<%end%>
						<td><%=check_box_tag "packages[]",p.id,false,:class=>"add_package"%></td>
					</tr>
				<%end%>
			</tbody>
		</table>
		<%=form_tag packages_sms_meeting_path(@meeting),:method=>"post" do%>
			<%=submit_tag "Submit",:class=>"btn btn-success pull-right"%>
		<%end%>
	</div>
</div>
<script>
	$(document).ready(function(){
		var dt=$("#packages_table").DataTable();
		$('form').on('submit',function(){
			var form=$(this);
			dt.rows().nodes().to$().each(function(){
				form.append($(this).find(".add_package"));
			});
		});
	});
</script>
<%if owner.contacts.present?%>
  <div class="col-xs-12 col-lg-12"%>
    <div class="panel panel-info">
        <div class="panel-heading click-heading collapsed">
          <div class="panel-title">
              <b>Contacts</b><span class="pull-right clickable"><i class="mt5 glyphicon glyphicon-chevron-down"></i></span>
          </div>
        </div>
        <div class="panel-body" style="display:none">
          <div class="row">
            <%owner.contacts.each do |contact|%>
              <div class="col-xs-12">
                <div class="panel panel-info">
                  <div class="panel-heading click-heading collapsed">
                    <div class="panel-title">
                      <b>#<%=contact.id%> <%=contact.contact_name%></b><span class="pull-right clickable"><i class="mt5 glyphicon glyphicon-chevron-down"></i></span>
                    </div>
                  </div>
                  <div class="panel-body" style="display:none">
                    <div class="row">
                      <%=render '/forms/show_fields',
                        :fields => fields,
                        :record => contact
                      %>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  <%end%>


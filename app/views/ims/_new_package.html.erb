
<div class="panel-warning">
	<div class="panel-heading">
		<div class="panel-title">New <%=@im.class.display_name%> Package
		<button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span class="glyphicon glyphicon-remove"></span></button></div>
	</div>
	<div class="panel-body" style="max-height: calc(100vh - 210px);overflow-y:auto">
		<%=form_for @package.becomes(Package) do |f|%>
			<%=f.hidden_field :owner_id,:value=>@item.id%>
			<%=hidden_field_tag :type,@package.type%>
			<%=render 'packages/form',:f=>f,:fields=>@fields%>
			<%=f.submit "Save",:class=>"btn btn-success pull-right mt5 mr5", disable_with: "Saving..."%>
		<%end%>
	</div>
</div>

<%=form_tag link_sras_sra_path, method: :post do%>
  <%=hidden_field_tag 'id', @sra.id %>
  <%=hidden_field_tag 'sras_selected', '' %>
  <div class="panel-warning">
    <div class="panel-heading">
      <div class="panel-title"><%="Add Reports to SRA ID ##{@sra.id}"%>
        <button type="button" id="close_sras_modal" class="close pull-right" data-dismiss="modal" aria-label="Close">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </div>
    </div>
    <div class="panel-body" style="max-height: calc(100vh - 400px);overflow-y:auto">
      <div class="col-xs-12">
        <%#render "shared/instructions", :instruction => @instruction, :include_workflow_diagram => false%>
        <table id="all_sras_table" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Sra ID</th>
              <th>Sra Title</th>
              <th>Sra Status</th>
              <th>Add Status</th>
            </tr>
          </thead>
          <tbody>
            <%@sras.each do |sra|%>
              <tr class="pointer" id="<%=sra.id%>">
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=sra.id%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=sra.title%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=sra.status%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12 hidden">
                    <input type="checkbox" id="<%=sra.id%>" value="<%=sra.title%>" class="sras">
                  </div>
                  <strong id="<%=sra.id%>" style="color:red">
                    Not Added
                  </strong>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <%=submit_tag "Link Sras", :class => "btn btn-success pull-right mt5", :disable_with => "Adding...", :onclick => 'return serialize_sra_ids();'%>
    </div>
  </div>
<%end%>

<style type="text/css">
  .checkbox-custom input[type=checkbox]{ position: relative; }

  .pointer{
    cursor:pointer;
  }
</style>

<script type="text/javascript">
  $(document).ready(function() {
    let all_sras_table = $('#all_sras_table').DataTable({
        "iDisplayLength": -1,
        "aaSorting": [[ 0, "desc" ]]
    });

    $("tr").on('click', function() {
      id = $(this).attr('id');
      $('.sras').each(function() {
        if($(this).attr('id') == id) {
          if ($(this).is(':checked')) {
            $(this).prop('checked', false);
            $(this).closest('td').find('strong').first().css("color", "red");
            $(this).closest('td').find('strong').first().html("Not Added");
          } else {
            $(this).prop('checked', true);
            $(this).closest('td').find('strong').first().css("color", "green");
            $(this).closest('td').find('strong').first().html("To be Added");
          }
        }
      });
    });
  });

  function serialize_sra_ids() {
    let sra_items = '';
    let sra_elems = $("input.sras:checked");

    sra_elems.each(function(index, elem){
        sra_items += $(elem).attr('id') + ",";
    });

    if (sra_items == ''){
      alert("Please select at least 1 Sra or close the pop-up");
      return false;
    }
    $('#sras_selected').val(sra_items);
    return true;
  }
</script>

<%=form_tag add_all_records_sras_path, method: :post do%>
  <%=hidden_field_tag 'sra_id', @sra.id %>
  <%=hidden_field_tag 'records_selected', '' %>
  <div class="panel-warning">
    <div class="panel-heading">
      <div class="panel-title"><%="Add Reports to SRA ID ##{@sra.id}"%>
        <button type="button" id="close_records_modal" class="close pull-right" data-dismiss="modal" aria-label="Close">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </div>
    </div>
    <div class="panel-body" style="max-height: calc(100vh - 400px);overflow-y:auto">
      <div class="col-xs-12">
        <%=render "shared/instructions", :instruction => @instruction%>
        <table id="all_records_table" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Report ID</th>
              <th>Report Title</th>
              <th>Add Status</th>
            </tr>
          </thead>
          <tbody>
            <%@records_hash.each do |key, value|%>
              <tr class="pointer" id="<%=key%>">
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=key%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12">
                    <strong>
                      <%=value%>
                    </strong>
                  </div>
                </td>
                <td>
                  <div class="col-xs-12 hidden">
                    <input type="checkbox" id="<%=key%>" value="<%=key%>" class="records">
                  </div>
                  <strong id="<%=key%>" style="color:red">
                    Not Added
                  </strong>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <%=submit_tag "Add", :class => "btn btn-success pull-right mt5", :disable_with => "Adding...", :onclick => 'return serialize_record_ids();'%>
    </div>
  </div>
<%end%>

<style type="text/css">
  .checkbox-custom input[type=checkbox]{ position: relative; }

  .pointer{
    cursor:pointer;
  }
</style>

<script type="text/javascript">
  $(document).ready(function() {
    let all_records_table = $('#all_records_table').DataTable({
        "iDisplayLength": -1,
        "aaSorting": [[ 0, "desc" ]]
    });

    $("tr").on('click', function() {
      id = $(this).attr('id');
      $('.records').each(function() {
        if($(this).attr('id') == id) {
          if ($(this).is(':checked')) {
            $(this).prop('checked', false);
            $(this).closest('td').find('strong').first().css("color", "red");
            $(this).closest('td').find('strong').first().html("Not Added");
          } else {
            $(this).prop('checked', true);
            $(this).closest('td').find('strong').first().css("color", "green");
            $(this).closest('td').find('strong').first().html("To be Added");
          }
        }
      });
    });
  });

  function serialize_record_ids() {
    let record_items = '';
    let record_elems = $("input.records:checked");

    record_elems.each(function(index, elem){
        record_items += $(elem).val() + ",";
    });

    if (record_items == ''){
      alert("Please select at least 1 Report or close the pop-up");
      return false;
    }
    $('#records_selected').val(record_items);
    return true;
  }
</script>

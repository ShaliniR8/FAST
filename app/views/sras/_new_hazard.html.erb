<%=form_for @sra do |x|%>
	<%=x.fields_for :hazards,@hazard do |f|%>
		<%=render "hazards/form", :f => f, :hazard => @hazard%>
		<%=x.submit "Submit", :class => "btn btn-success pull-right mr15 mt5", :disable_with => "Submitting..."%>
	<%end%>
<%end%>



